<Window x:Class="Memorama_Client.ValidarRegistro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorama_Client"
        xmlns:p = "clr-namespace:Memorama_Client.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.tituloVerificarRegistrop}" Height="250" Width="450">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/tema-fondo-luces-neon_52683-44625.jpg"/>
        </Grid.Background>
        <Label Content="{x:Static p:Resources.DescripcionValidar}" Foreground="White" HorizontalAlignment="Left" Margin="22,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCodigoVerificacion" HorizontalAlignment="Left" Height="23" Margin="22,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.Name="codigoVerificacion" MaxLength="10"/>
        <Button x:Name="btnVerificar" Content="{x:Static p:Resources.btnVerificar}" HorizontalAlignment="Left" Margin="80,133,0,0" VerticalAlignment="Top" Width="75" Click="btnVerificar_Click"/>
    </Grid>
</Window>

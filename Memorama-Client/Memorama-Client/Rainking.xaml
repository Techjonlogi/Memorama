<Window x:Class="Memorama_Client.Rainking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memorama_Client"
        mc:Ignorable="d"
        Title="Rainking" Height="450" Width="350">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/tema-fondo-luces-neon_52683-44625.jpg"/>
        </Grid.Background>
        <Label Content="Rainking" HorizontalAlignment="Left" Margin="44,30,0,0" VerticalAlignment="Top" Width="120" FontSize="24" Foreground="#FFF7F7F7" Background="#00000000" FontWeight="Bold" RenderTransformOrigin="-0.154,-0.582"/>
        <ListView HorizontalAlignment="Left" Height="293" Margin="20,94,0,0" VerticalAlignment="Top" Width="297" x:Name="lvRankig">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Usuario" Width="150" DisplayMemberBinding="{Binding Nickname}"/>
                    <GridViewColumn Header="Puntuación" Width="150" DisplayMemberBinding="{Binding Puntuacion}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
